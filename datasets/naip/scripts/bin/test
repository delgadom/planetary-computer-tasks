#!/bin/bash

set -e

if [[ "${CI}" ]]; then
    set -x
fi

function usage() {
    if [[ "${1}" ]]; then
        echo "${1}"
    fi
    echo -n \
        "Usage: $(basename "$0") [OPTIONS]
Runs tests. Meant to be run in the dev container.

Options:
    --test-only
        Only run tests, don't lint
    --lint-only
        Only run linting
    --help
        Show this help

"
}

# Parse args
TEST_ONLY=""
LINT_ONLY=""
while [[ $# -gt 0 ]]; do case $1 in
    --test-only)
        TEST_ONLY="1"
        shift
        ;;
    --lint-only)
        LINT_ONLY="1"
        shift
        ;;
    --help)
        usage
        exit 0
        shift
        ;;
    *)
        usage "Unknown parameter passed: $1"
        exit 1
        ;;
    esac done

if [ "${BASH_SOURCE[0]}" = "${0}" ]; then

    echo " === Running tests ==="
    if [ -z "${TEST_ONLY}" ]; then

        echo "Running mypy..."
        mypy --install-types --non-interactive ${PYTHON_PACKAGE_NAME} tests

        echo "Running black..."
        black --check ${PYTHON_PACKAGE_NAME} tests

        echo "Running isort..."
        isort --check ${PYTHON_PACKAGE_NAME} tests

        echo "Running flake8..."
        flake8 ${PYTHON_PACKAGE_NAME} tests
    fi

    if [ -z "${LINT_ONLY}" ]; then
        echo "Running unit tests..."
        pytest tests
    fi

fi
