#!/bin/bash

set -e

if [[ "${CI}" ]]; then
    set -x
fi

function usage() {
    echo -n \
        "Usage: $(basename "$0")
Runs a development console.
"
}

if [ "$1" = "--help" ]; then
    usage
    exit 0
fi

if [ "${BASH_SOURCE[0]}" = "${0}" ]; then

    docker-compose \
        run --rm \
        --entrypoint /bin/bash \
        task-dev

fi
