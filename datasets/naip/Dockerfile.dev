ARG base

FROM ${base}

COPY pctasks/execute /opt/lib/pctasks/execute
RUN cd /opt/lib/pctasks/execute && \
     pip install -e .

COPY pctasks/dev /opt/lib/pctasks/dev
RUN cd /opt/lib/pctasks/dev && \
     pip install -e .[server]


COPY datasets/naip/requirements-dev.txt /opt/src/requirements-dev.txt
RUN pip install -r requirements-dev.txt