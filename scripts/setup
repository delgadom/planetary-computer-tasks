#!/bin/bash

set -e

DOCKER_NETWORK_NAME="pctasks-network"
KIND_CLUSTER_NAME="kind-pctasks"

if [[ "${CI}" ]]; then
    set -x
fi

function usage() {
    if [[ "${1}" ]]; then
        echo "${1}"
    fi
    echo -n \
        "Usage: $(basename "$0") [OPTIONS]
Sets up this project for development.

Options:
    --azurite
        Only run the Azurite setup.
"
}

AZURITE_ONLY=""
while [[ $# -gt 0 ]]; do case $1 in
    --azurite)
        AZURITE_ONLY=1
        shift
        ;;
    --help)
        usage
        exit 0
        shift
        ;;
    *)
        usage "Unknown parameter passed: $1"
        exit 1
        ;;
    esac done


if [ "${BASH_SOURCE[0]}" = "${0}" ]; then
    if [ -z "${AZURITE_ONLY}" ]; then
        if ! docker network ls | grep -q ${DOCKER_NETWORK_NAME}; then
            echo " -- CREATING DOCKER NETWORK"

            docker network create \
                --driver=bridge \
                pctasks-network
        fi

        echo " -- BUILDING CONTAINERS"
        scripts/update

        echo " -- STARTING SERVERS"
        scripts/server --detached

        # TODO: Migrate the dev PgSTAC database
        # echo " -- MIGRATING THE DB"
        # scripts/migrate
    fi

    echo " -- SETTING UP AZURITE"
    docker-compose -f docker-compose.console.yml run --rm \
        dev \
        pctasks-dev setup-azurite

    echo "Done."

fi
